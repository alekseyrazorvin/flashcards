%header.clearfix
  %nav.navbar.navbar-default{:role => "navigation"}
    .container
      / Brand and toggle get grouped for better mobile display
      .navbar-header
        %button.navbar-toggle{"data-target" => "#bs-example-navbar-collapse-1", "data-toggle" => "collapse", :type => "button"}
          %span.sr-only Toggle navigation
          %span.icon-bar
          %span.icon-bar
          %span.icon-bar
        %a.navbar-brand{:href => "/"} Флэшкарточкер
      #bs-example-navbar-collapse-1.collapse.navbar-collapse
        %ul.nav.navbar-nav
          - if current_user
            %li
              = link_to 'Тренироваться', train_path
            %li
              = link_to 'Все карточки', cards_path
            %li
              = link_to 'Добавить карточку', new_card_path
            %li
              = link_to 'Все колоды', decks_path
        %ul.nav.nav-pills.navbar-right
          - if current_user
            %li.active
              = link_to "Выйти", :logout, method: :post
            %li
              = link_to "#{current_user.email}", edit_user_path(current_user)
          - else
            %li.active
              = link_to "Регистрироваться", new_user_path
            %li
              =link_to "Войти", :login
            %li
              =link_to "Github login", auth_at_provider_path(:provider => :github)
